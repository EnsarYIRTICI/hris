@model Tuple<int, IEnumerable<hris.Seed.Domain.Entities.EmailType>, string, int>

<div class="email-item flex items-center space-x-4">

    <!-- Email Address -->

    <div class="w-[60%]">
        <label class="block text-sm font-medium text-gray-700">Email</label>
        <input type="email"
               name="Emails[@Model.Item1].Email"
               value="@Model.Item3"
               required maxlength="200"
               placeholder="example@example.com"
               class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
    </div>

    <!-- Email Type -->

    <div class="w-[30%]">
        <label class="block text-sm font-medium text-gray-700">Type</label>
        <select class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 bg-white"
                name="Emails[@Model.Item1].EmailTypeId"
                asp-for="@Model.Item4"
                required>
        
            <option value="">Select</option>
            @foreach (var type in Model.Item2)
            {
                <option value="@type.Id">@type.Name</option>
            }
        </select>
    </div>

    <!-- Delete -->

    <div onclick="DeleteEmail(@Model.Item1)" class="w-[10%] text-xs mt-5 flex items-center justify-center ml-4 cursor-pointer text-red-500 hover:text-red-700">

        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-trash-2"><path d="M3 6h18" /><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6" /><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2" /><line x1="10" x2="10" y1="11" y2="17" /><line x1="14" x2="14" y1="11" y2="17" /></svg>
    </div>
</div>

 