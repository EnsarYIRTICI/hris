@page
@model Error404Model
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>404 - Page Not Found</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 h-screen flex items-center justify-center">
    <div class="text-center">
        <h1 class="text-9xl font-bold text-indigo-600">404</h1>
        <p class="text-2xl font-semibold mt-4 text-gray-800">Oops! Page not found.</p>
        <p class="mt-2 text-gray-600">
            The page you're looking for doesn't exist or has been moved.
        </p>
        <div class="mt-6">
            <a href="/" class="px-6 py-3 bg-indigo-600 text-white text-sm font-medium rounded-lg shadow hover:bg-indigo-700">
                Go to Homepage
            </a>
        </div>
    </div>
</body>
</html>
