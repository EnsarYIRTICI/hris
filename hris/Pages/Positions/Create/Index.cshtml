@page "{id:int}"
@model hris.Pages.Positions.Create.IndexModel
@{
    ViewData["Title"] = "Create Position";
}

<div class="flex-1 p-5">

    <!-- Breadcrumb -->
    @await Html.PartialAsync("_Breadcrumb", Tuple.Create(Model.Breadcrumbs.AsEnumerable()))

    <section class="w-full md:w-[25rem] bg-white shadow-md border border-gray-200 rounded-lg p-6 mb-6">
        <h2 class="text-2xl font-semibold text-gray-800 mb-1">Create a Position </h2>
        <h3 class="text-sm font-semibold text-gray-800 mb-4">in @Model.Department.Name</h3>

        <form method="post">
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="PositionName">Position Name</label>
                <input type="text" asp-for="PositionName" class="shadow border rounded w-full py-2 px-3 text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required>
            </div>

            <button type="submit" asp-page-handler="CreatePosition"
                    class="w-full bg-blue-600 text-white font-medium px-4 py-2 rounded-lg shadow-md
               hover:bg-blue-700 transition-transform transform hover:scale-105">
                Submit
            </button>
        </form>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="mt-4 text-red-500">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }
    </section>

    <a href="/departments/details/@Model.Department.Id" class="text-gray-600 hover:text-gray-900 font-semibold text-lg">← Back to @Model.Department.Name</a>
</div>
