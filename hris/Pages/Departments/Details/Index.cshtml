@page "{id:int}"
@model hris.Pages.Departments.Details.IndexModel
@{
    ViewData["Title"] = "Department Details";
}

<div class="flex-1 p-5">

    <!-- Breadcrumb -->
    @await Html.PartialAsync("_Breadcrumb", Tuple.Create(Model.Breadcrumbs.AsEnumerable()))


    <h1 class="text-3xl font-semibold text-blue-700 mb-6">@Model.Department.Name</h1>

    <section class="flex justify-end py-8">
        <a href="/positions/create/@Model.Department.Id"
           class="
            flex items-center bg-white text-blue-500 px-4 py-3
            rounded-md shadow-md hover:bg-gray-100 focus:
            outline-none focus:ring-2 focus:ring-blue-400">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-circle-plus text-blue-500">
                <circle cx="12" cy="12" r="10" />
                <path d="M8 12h8" />
                <path d="M12 8v8" />
            </svg>
            <span class="ml-3">
                Create Position
            </span>
        </a>
    </section>

    <section class="py-4">
        <div class="relative w-full max-w-md">
            <span class="absolute inset-y-0 left-0 flex items-center pl-3">
                <svg xmlns="http://www.w3.org/2000/svg"
                     class="h-5 w-5 text-gray-400"
                     viewBox="0 0 20 20"
                     fill="currentColor">
                    <path fill-rule="evenodd"
                          d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.293 4.707l4 4a1 1 0 01-1.414 1.414l-4-4A6 6 0 012 8z"
                          clip-rule="evenodd" />
                </svg>
            </span>
            <input type="text"
                   id="searchInput"
                   placeholder="Search..."
                   class="block w-full pl-10 pr-4 py-3 text-gray-700 bg-white border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 focus:outline-none" />
        </div>
    </section>

    <section class="bg-gray-50 shadow-lg border border-blue-300 rounded-lg p-6 mb-6">
        <h2 class="text-2xl font-semibold text-blue-600 mb-4">Positions</h2>

        <table class="table-auto w-full border-collapse border border-blue-200">
            <thead>
                <tr class="bg-blue-100">
                    <th class="border border-blue-300 px-6 py-3 text-left">ID</th>
                    <th class="border border-blue-300 px-6 py-3 text-left">Position Name</th>
                    <th class="border border-blue-300 px-6 py-3 text-left">Employees Count</th>
                    <th class="border border-blue-300 px-6 py-3 text-left">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var position in Model.Department.Positions)
                {
                    <tr class="hover:bg-blue-50 transition">
                        <td class="border border-blue-300 px-6 py-3">@position.Id</td>
                        <td class="border border-blue-300 px-6 py-3">@position.Name</td>
                        <td class="border border-blue-300 px-6 py-3">@position.EmployeeCount</td>
                        <td class="border border-blue-300 px-6 py-3">
                            <div class="flex items-center space-x-4">
                                <a href="/positions/details/@position.Id"
                                   class="text-blue-600 hover:text-blue-400 transition font-medium">
                                    Details
                                </a>
                                <a href="/positions/edit/@position.Id"
                                   class="text-green-600 hover:text-green-400 transition font-medium">
                                    Edit
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>

    <a href="/departments" class="text-gray-600 hover:text-gray-900 font-semibold text-lg">← Back to Departments</a>
</div>


